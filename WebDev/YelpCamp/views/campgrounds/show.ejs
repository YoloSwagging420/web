<% layout('layouts/boilerplate') %>
<div class="row">
    <div class="col-6 offset-3">
        <div class="card" style="width: 36rem;">
            <img src="<%= campground.image %>" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title"><%= campground.title %></h5>
                <p class="card-text"><%= campground.description %> </p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-muted"><%= campground.location %></li>
                <li class="list-group-item">$<%= campground.price %>/night</li>
            </ul>
            <div class="card-body">
                <a href="/campgrounds/<%= campground._id %>/edit" class="card-link"><button class="btn btn-info">Edit</button></a>
                <form action="/campgrounds/<%-campground._id%>?_method=DELETE" method="POST" class="d-inline">
                    <button class="btn btn-danger">Delete</button>
                </form>
            </div>
            <div class="card-footer text-mute">
                <a href="/campgrounds"><button class="btn btn-success">Return to All Campgrounds Page</button></a>
            </div>
        </div>        
    </div>
</div>
    
